<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<VBox prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      styleClass="background" fx:controller="YuGiOh.graphicView.NewGameView" alignment="CENTER">
    <VBox scaleX="0.4" scaleY="0.4" alignment="CENTER" spacing="20">
        <VBox alignment="CENTER" spacing="10" fx:id="vBox">
            <Label textAlignment="CENTER" text="Enter the second player's username below:" styleClass="text"/>
            <TextField fx:id="secondPlayerUsernameTextField" promptText="username" alignment="CENTER"
                       styleClass="text-field" prefWidth="200"/>
        </VBox>
        <HBox alignment="CENTER" spacing="15" fx:id="hBox">
            <Label textAlignment="CENTER" fx:id="numberOfRoundsLabel" styleClass="text"/>
        </HBox>
        <Button alignment="CENTER" defaultButton="true" onMouseClicked="#startGame"
                mnemonicParsing="false" text="Start Game" styleClass="button"/>
        <Button alignment="CENTER" defaultButton="true" onMouseClicked="#exit"
                mnemonicParsing="false" text="Back" styleClass="button"/>
    </VBox>
    <stylesheets>
        <URL value="@../css/NewGame.css"/>
    </stylesheets>
</VBox>
